{
    "name": "snf-node-operator",
    "bin": "js/src/snow-operator.js",
    "scripts": {
        "start": "ts-node src/snow-operator.ts",
        "test": "jest",
        "build": "rm -rf dist/ && rm -rf js/ && tsc && cp -R src/idl js/src/ && cp -R src/schemas js/src/",
        "package-app": "pkg . && cd dist/ && zip snf-node-operator.zip snf-node-operator"
    },
    "dependencies": {
        "@project-serum/anchor": "^0.21.0",
        "@types/bluebird": "^3.5.36",
        "@types/sqlite3": "^3.1.8",
        "bluebird": "^3.7.2",
        "dotenv": "^16.0.0",
        "log4js": "^6.3.0",
        "node-cron": "^3.0.0",
        "sqlite3": "^5.0.2",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.10",
        "@types/node-cron": "^3.0.0",
        "jest": "^27.5.1",
        "ts-jest": "^27.1.3"
    },
    "pkg": {
        "scripts": "js/src/**/*.js",
        "assets": ["js/src/**/*.json", "js/src/**/*.sql", "node_modules/**/*.node"],
        "targets": [ "node16-linux-x64" ],
        "outputPath": "dist"
    }
}
