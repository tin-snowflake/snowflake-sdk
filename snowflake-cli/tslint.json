{
  "extends": ["tslint:latest", "tslint-eslint-rules"],
  "linterOptions": {
    "format": "codeFrame"
  },
  "rules": {
    "align": [
      true,
      "arguments",
      "elements",
      "members",
      "parameters",
      "statements"
    ],
    "array-bracket-spacing": [false, "always"],
    "array-type": [true, "array-simple"],
    "arrow-return-shorthand": true,
    "await-promise": [
      true,
      "UserClient",
      "PromiseLike",
      "Bluebird",
      "QueryBuilder",
      "QueryBuilderSingle",
      "QueryBuilderOption",
      "QueryBuilderBase",
      "QueryBuilderPage",
      "QueryBuilderUpdate",
      "QueryBuilderDelete",
      "QueryBuilderInsert",
      "QueryBuilderInsertSingle"
    ],
    "ban": [
      true,
      "window",
      "eval",
      {
        "name": "isNaN",
        "message": "You can use Number.isNaN() instead of isNaN()"
      },
      ["*", "only"]
    ],
    "ban-comma-operator": true,
    "binary-expression-operand-order": true,
    "block-spacing": [true, "always"],
    "class-name": true,
    "comment-format": [
      true,
      "check-uppercase",
      "check-space",
      {
        "ignore-words": ["TODO", "@todo"]
      }
    ],
    "curly": true,
    "cyclomatic-complexity": [true, 15],
    "file-name-casing": [true, "kebab-case"],
    "handle-callback-err": [true, "^(err|error|e)$"],
    "import-blacklist": [true, "lodash", "rxjs/Rx"],
    "indent": false,
    "invalid-void": true,
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        },
        "CallExpression": {
          "arguments": 1
        }
      }
    ],
    "interface-over-type-literal": true,
    "max-classes-per-file": false,
    "max-file-line-count": [true, 600],
    "max-line-length": [true, 120],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-bitwise": false,
    "no-constant-condition": true,
    "no-duplicate-imports": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-duplicate-switch-case": true,
    "no-empty": true,
    "no-empty-character-class": true,
    "no-empty-interface": false,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-floating-promises": false,
    "no-for-in": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [true, "dev", ["@generated/photon"]],
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "no-inner-declarations": true,
    "no-internal-module": true,
    "no-invalid-regexp": true,
    "no-invalid-template-strings": true,
    "no-irregular-whitespace": true,
    "no-regex-spaces": true,
    "no-magic-numbers": false,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": [true, "allow-declarations"],
    "no-redundant-jsdoc": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-submodule-imports": false,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": [true, "ignore-template-strings"],
    "no-unbound-method": false,
    "no-unexpected-multiline": true,
    "no-unnecessary-initializer": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "number-literal-format": true,
    "object-curly-spacing": [true, "always"],
    "object-literal-shorthand": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "prefer-function-over-method": [true, "allow-public"],
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "promise-function-async": true,
    "quotemark": [true, "double", "avoid-escape", "avoid-template"],
    "restrict-plus-operands": true,
    "return-undefined": true,
    "space-within-parens": [true, 0],
    "strict-boolean-expressions": [false, "allow-boolean-or-undefined"],
    "strict-string-expressions": [
      true,
      {
        "allow-empty-types": true
      }
    ],
    "strict-type-predicates": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never"
      }
    ],
    "trailing-comma": [
      false,
      {
        "esSpecCompliant": false,
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case",
      "require-const-for-all-caps"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  }
}
